<KivySlider>:
    orientation: 'vertical'
    size: root.size

    Slider:
        id: sld
        min: 0
        max: 100
        step: 1
        value: 0
        on_touch_down: root.on_slider_move(self, self.value)
        on_touch_move: root.on_slider_move(self, self.value)
        on_touch_up: root.on_slider_move(self, self.value)

    Label:
        id: lbl
        text: str(sld.value)
